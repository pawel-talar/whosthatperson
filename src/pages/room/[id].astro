---
import "../../styles/global.css";
import Room from "../../components/Room";

const { id } = Astro.params;
if (!id) {
  throw new Error("Missing room id");
}
---

<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Pokój — Who's That Person?</title>
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-100">
    <header class="border-b border-slate-800/60 bg-slate-950/80">
      <div class="mx-auto flex w-full max-w-4xl items-center px-6 py-4">
        <a
          href="/"
          class="brand-logo text-2xl tracking-wide text-emerald-200 transition hover:text-emerald-100"
        >
          Who's that person?
        </a>
      </div>
    </header>
    <main class="mx-auto flex w-full max-w-4xl flex-col gap-6 px-6 py-10">
      <section class="rounded-2xl border border-slate-800 bg-slate-900/70 p-6 shadow-xl">
        <Room client:load roomId={id} />
      </section>
    </main>
  </body>
</html>
